###############################################################
# outlook-mcp .env.example
# Copy to .env and fill in all required values
#
# This example covers:
#   - Basic development
#   - Claude Desktop integration
#   - Token encryption
#   - Test mode
#   - Advanced/production options
#
# NEVER commit your real .env file to version control!
###############################################################

# === Required for Microsoft Graph API ===
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_SCOPES=Mail.Read,User.Read,Calendars.Read
GRAPH_API_ENDPOINT=https://graph.microsoft.com/v1.0/

# === Claude Desktop Integration (if used) ===
# OUTLOOK_CLIENT_ID=  # (if different for Claude)
# OUTLOOK_CLIENT_SECRET=

# === Token Encryption Key ===
# Must be 64 hex characters (32 bytes)
MCP_TOKEN_KEY=

# === Test Mode ===
# Set to true to use mock data from utils/mock-data.js
USE_TEST_MODE=false
USE_MOCK_GRAPH_API=false

# === Server & Auth Settings ===
SERVER_NAME=outlook-assistant
SERVER_VERSION=1.0.0
SECURE_PROMPT_MODE=true
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=
MS_REDIRECT_URI=http://localhost:3333/callback

# === API & App Settings ===
API_BASE_URL=https://graph.microsoft.com/v1.0
PAGE_SIZE=25
MAX_RESULT_COUNT=50
DEFAULT_TIMEZONE=Pacific Standard Time

# === Logging & Debugging ===
LOG_LEVEL=info
DEBUG=false

# === Advanced: Proxy, Custom Ports, etc. ===
PROXY_URL=
SERVER_PORT=8080

# === Production/Deployment ===
# Set all secrets securely (use a secret manager if possible)
# Ensure MCP_TOKEN_KEY is strong and random
# Set DEBUG=false and LOG_LEVEL=warn or error
#
# Example strong MCP_TOKEN_KEY (DO NOT USE IN PRODUCTION):
# MCP_TOKEN_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# === Other Custom Settings ===
# Add any other environment variables needed for your deployment

###############################################################