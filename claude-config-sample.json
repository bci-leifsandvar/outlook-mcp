{
  "mcpServers": {
    "outlook-assistant": {
      "command": "node",
      "args": [
        "/path/to/outlook-mcp/index.js"
      ],
      "env": {
        "USE_TEST_MODE": "false",            // Set true for mock data only
        "SECURE_PROMPT_MODE": "true",         // Enforce human confirmation on sensitive actions
        "SECURE_CONFIRM_MODE": "captcha",     // 'token' (default) or 'captcha' for browser flow
        "OUTLOOK_SCOPES": "Mail.Read,User.Read,Calendars.Read",
        "OUTLOOK_CLIENT_ID": "your-client-id-here",
        "OUTLOOK_CLIENT_SECRET": "your-client-secret-here"
      }
    }
  }
}
